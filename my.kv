<Player>:
    playing: playing
    Button:
        id: playing
        pos_hint: {'x': .05, 'top': .8}
        size_hint: .1, .1
        background_color: 0,0,0,0

        Image:
            id: playing_image
            source: "atlas://data//images//myatlas/play"
            center_x: self.parent.center_x - .2
            center_y: self.parent.center_y
            size_hint_x: .3
            allow_stretch: True

    Button:
        id: next
        pos_hint: {'x': .35, 'top': .8}
        size_hint: .1, .1
        background_color: 0,0,0,0

        Image:
            id: next_image
            source: "atlas://data//images//myatlas/next"
            center_x: self.parent.center_x - .2
            center_y: self.parent.center_y
            size_hint_x: .3
            allow_stretch: True
    Timer:
        id: timer
        font_size: '55sp'
        size: self.texture_size
        pos: 225, 75

    Button:
        id: volume
        pos_hint: {'x': .24, 'top': .8}
        size_hint: .05, .1
        background_color: 0,0,0,0

        Image:
            id: volume_image
            source: "atlas://data//images//myatlas/voice"
            center_x: self.parent.center_x - .2
            center_y: self.parent.center_y
            size_hint_x: .3
            allow_stretch: True
    Label:
        id: break_or_work
        text: 'Naciśnij play aby zacząć sesję pomodoro.'
        font_size: '30sp'
        #size_hint_y: None
        #height: self.texture_size[1] + dp(10)
        pos_hint: {'x': .3, 'top': .45}
        size_hint: .2, .1

    TextInput:
        text: "https://www.youtube.com/watch?v=TeVx53E_n3I"
        id: new_item
        multiline: False
        pos_hint: {'x': .05, 'top': .2}
        size_hint: .65, .15

    ButtonDownload:
        id: download
        pos_hint: {'x': .8, 'top': .25}
        size_hint: .1, .15
        background_color: 0,0,0,0

        Image:
            id: download_image
            source: "atlas://data//images//myatlas/download"
            center_x: self.parent.center_x - .2
            center_y: self.parent.center_y
            size_hint_x: .3
            allow_stretch: True

    Button:
        id: settings
        pos_hint: {'x': .5, 'top': .8}
        size_hint: .07, .1
        background_color: 0,0,0,0

        Image:
            id: settings_image
            source: "atlas://data//images//myatlas/settings"
            center_x: self.parent.center_x - .2
            center_y: self.parent.center_y
            size_hint_x: .3
            allow_stretch: True